<resources>


    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_black</item>
        <item name="colorAccent">@color/actionbar_color</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        //去掉button阴影
        <item name="buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"></style>
</resources>
